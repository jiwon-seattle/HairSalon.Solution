@{
  Layout = "_Layout";
}


@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<div class="container">
  <h2>Stylist</h2>

  @if (Model.Count == 0)
  {
    <h3>No clients have been found</h3>

  }
  @foreach (Stylist stylist in Model)
  {
    <li class="link">@Html.ActionLink($"{stylist.StylistName}", "Details", new {id = stylist.StylistId})</li>
  }

</div>