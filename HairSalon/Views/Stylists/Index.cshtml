@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="container">

  @if (TempData.ContainsKey("ErrorMessage"))
  {
  <h4 id="errorMessage">@TempData["ErrorMessage"]</h4>
  }
  @if(Model.Count == 0)
  {
    <h4>No Stylist has been added</h4>
  }
  else
  {
    @foreach(Stylist stylist in Model)
    {
      <h4 class="link">@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId})</h4>
    }
  }
  <p class="link">@Html.ActionLink("Add a new Stylist", "Create")</p>
</div>