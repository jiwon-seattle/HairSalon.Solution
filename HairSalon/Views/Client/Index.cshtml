@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>

<div class="container">
  <h2>Clients</h2>

  @if (Model.Count == 0)
  {
    <h3>No clients have been added</h3>
  }

  @foreach (Client client in Model)
  {
    <li class="link">@Html.ActionLink(@"{client.ClientName}", "Details", new {id = client.ClientId})</li>
  }

</div>